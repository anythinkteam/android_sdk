<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/anythink_myoffer_splash_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.anythink.basead.ui.component.RoundImageView
        android:id="@+id/anythink_myoffer_splash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/anythink_myoffer_splash_bottom_area"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/anythink_myoffer_splash_land_bottom_bg">

        <TextView
            android:id="@+id/anythink_myoffer_splash_ad_install_btn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/anythink_myoffer_splash_btn"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:textSize="17dp" />

        <com.anythink.basead.ui.component.RoundImageView
            android:id="@+id/anythink_myoffer_splash_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/anythink_myoffer_splash_ad_install_btn"
            android:layout_toRightOf="@id/anythink_myoffer_splash_icon"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/anythink_myoffer_splash_ad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="left"
                android:includeFontPadding="false"
                android:shadowColor="#aa000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="19dp"
                android:textStyle="bold" />

            <com.anythink.basead.ui.AppRatingView
                android:id="@+id/anythink_myoffer_rating_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"></com.anythink.basead.ui.AppRatingView>
        </LinearLayout>
    </RelativeLayout>


    <com.anythink.basead.ui.component.RoundFrameLayout
        android:id="@+id/anythink_myoffer_splash_ad_content_image_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/anythink_myoffer_splash_bottom_area"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="20dp"></com.anythink.basead.ui.component.RoundFrameLayout>


    <TextView
        android:id="@+id/anythink_myoffer_splash_self_ad_logo"
        android:layout_width="30dp"
        android:layout_height="16dp"
        android:background="@drawable/anythink_myoffer_splash_ad_bg"
        android:gravity="center"
        android:text="AD"
        android:textColor="#e9e9e9"
        android:textSize="12dp" />

    <com.anythink.basead.ui.component.RoundImageView
        android:id="@+id/anythink_myoffer_splash_ad_logo"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/anythink_myoffer_splash_skip"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/anythink_myoffer_splash_skip_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="skip"
        android:textColor="#ffffffff"
        android:textSize="14dp" />

</RelativeLayout>