<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/anythink_myoffer_splash_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.anythink.basead.ui.component.RoundImageView
        android:id="@+id/anythink_myoffer_splash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.anythink.basead.ui.component.RoundImageView
        android:id="@+id/anythink_myoffer_splash_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/anythink_myoffer_splash_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/anythink_myoffer_splash_icon"
        android:ellipsize="middle"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:shadowColor="#aa000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:textColor="#ffffff"
        android:textSize="23dp"
        android:textStyle="bold" />

    <com.anythink.basead.ui.AppRatingView
        android:id="@+id/anythink_myoffer_rating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/anythink_myoffer_splash_ad_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"></com.anythink.basead.ui.AppRatingView>


    <TextView
        android:id="@+id/anythink_myoffer_splash_ad_install_btn"
        android:layout_width="200dp"
        android:layout_height="71dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="@drawable/anythink_myoffer_splash_btn"
        android:gravity="center"
        android:padding="0dp"
        android:textColor="#ffffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/anythink_myoffer_splash_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/anythink_myoffer_splash_ad_install_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="29dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:shadowColor="#aa000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:textStyle="bold" />

    <com.anythink.basead.ui.component.RoundFrameLayout
        android:id="@+id/anythink_myoffer_splash_ad_content_image_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/anythink_myoffer_splash_desc"
        android:layout_below="@id/anythink_myoffer_rating_view"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></com.anythink.basead.ui.component.RoundFrameLayout>



    <TextView
        android:id="@+id/anythink_myoffer_splash_self_ad_logo"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:background="@drawable/anythink_myoffer_splash_ad_bg"
        android:gravity="center"
        android:text="AD"
        android:textColor="#e9e9e9"
        android:textSize="14dp" />



    <TextView
        android:id="@+id/anythink_myoffer_splash_skip"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/anythink_myoffer_splash_skip_bg"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="14dp"
        android:includeFontPadding="false"
        android:text="skip"/>


    <com.anythink.basead.ui.component.RoundImageView
        android:id="@+id/anythink_myoffer_splash_ad_logo"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>